> +{
> +	char *p;
> +
> +	while ((p = strstr(s, c))) {
> +		*p = '\0';
> +		strcat(s, p+strlen(c));
> +	}
> +
> +	return s;
> +}
> +
>  static int snd_jack_debugfs_add_inject_node(struct snd_jack *jack,
