 			break;
 
-		if (!component->driver->ops ||
-		    !component->driver->ops->hw_free)
-			continue;
-
-		component->driver->ops->hw_free(substream);
+		snd_soc_component_hw_free(component, substream);
 	}
 
 	return 0;
