 	.channels_max = 2,
 };
 
+SND_SOC_DAILINK_DEFS(cpu_dsp,
+	DAILINK_COMPONENT_ARRAY(COMPONENT_FE("samsung-i2s.0")),
+	DAILINK_COMPONENT_ARRAY(COMPONENT_BE("spi0.0", "wm0010-sdi1")),
+	DAILINK_COMPONENT_ARRAY(COMPONENT_DMA("samsung-i2s.0")));
