 		if (component == last)
 			break;
 
-		if (component->driver->ops &&
-		    component->driver->ops->close)
-			component->driver->ops->close(substream);
-
+		snd_soc_component_close(component, substream);
 		snd_soc_component_module_put(component, 1);
 	}
 
