+++ b/pulse/50-pulseaudio.conf
@@ -1,7 +1,13 @@
 # Add a specific named PulseAudio pcm and ctl (typically useful for testing)
 
 pcm.pulse {
+	@args [ DEVICE ]
+	@args.DEVICE {
+		type string
+		default ""
+	}
 	type pulse
+	device $DEVICE
 	hint {
 		show {
 			@func refer
