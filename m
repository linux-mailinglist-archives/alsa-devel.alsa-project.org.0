+	for (li->cpu = 1; li->cpu >= 0; li->cpu--)
+		simple_for_each_link(priv, li,
+				     simple_count_noml,
+				     simple_count_dpcm);
 
 	dev_dbg(dev, "link %d, dais %d, ccnf %d\n",
 		li->link, li->dais, li->conf);
